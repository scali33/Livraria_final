doctype html
html(lang='pt-br')
    head
        meta(charset='UTF-8')
        meta(http-equiv='X-UA-Compatible', content='IE=edge')
        meta(name='viewport', content='width=device-width, initial-scale=1.0')
        link(rel='stylesheet', href='/css/style.css') 
        title Cadastro de Usuário
    body
        #cadastro
            form.card(method='POST', action='/cadastrar/usuarios')
                .card-header
                    h2 Cadastro de Usuário
                .card-content
                    .card-content-area
                        label(for='nome') Nome
                        input(type='text', id='nome', name='nome', placeholder='Seu Nome', required)
                    .card-content-area
                        label(for='Gmail') Email (Gmail)
                        input(type='email', id='Gmail', name='Gmail', placeholder='seuemail@gmail.com', required)
                    .card-content-area
                        label(for='senha') Senha
                        input(type='password', id='senha', name='senha', placeholder='Digite sua senha', required)
                    .card-content-area
                        label(for='confirmacao') Confirmação de Senha
                        input(type='password', id='confirmacao', name='confirmacao', placeholder='Confirme sua senha', required)
                .card-footer
                    input(type='submit', value='Cadastrar', class='submit')
